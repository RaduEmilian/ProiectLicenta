@model TestFinal.ViewModels.EditCategoryViewModel

@{ ViewBag.Title = "Edit Category"; }

<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <h2 class="">

            <br>
            Modifica optiune
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="fas fa-sign-in-alt"></i> Editeaza rol
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                    Introduceti numele si apasati pe butonul de update pentru a salva modificarile
                </p>
                <form class="gx-3 gy-2 align-items-center" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Id">Role ID</label>
                        <input disabled asp-for="Id" class="form-control" id="roleId">
                    </div>
                    <div class="form-group row">
                        <label asp-for="Nume">Option Name</label>
                        <input asp-for="Nume" class="form-control" id="roleName">
                        <span asp-validation-for="Nume" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-wrench"></i>
                            Update
                        </button>
                        <a asp-action="ListOptions" asp-controller="category" class="btn btn-danger">
                            <i class="fas fa-window-close"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <h2 class="">
            <i class="fas fa-users"></i>
            Informatii
        </h2>

        <hr />
    </div>
</div>
